{
    "extends": "eslint:recommended",
    "rules": {
        "comma-dangle": 0,
        "no-console": ["error", { "allow": ["log", "error"] }],
        "no-constant-condition": 0,
        "semi": 0
    },
    "ecmaFeatures": {
        "modules": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "plugins": [],
    "globals": {
        "cc": false,
        "CC_EDITOR": false,
        "Editor": false,
        "Vue": false,
        "CC_DEV": false,
        "CC_JSB": false,
        "_ccsg": false
    }
}